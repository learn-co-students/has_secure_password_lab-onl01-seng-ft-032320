<h2>Create an Account</h2>
<%= form_for(@user) do |f| %>
  <label>Name:</label><br>
  <%= f.text_field :name %><br>

   <label>Password:</label><br>
  <%= f.password_field :password %><br>

   <label>Confirm Password:</label><br>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit %>
<% end %>
